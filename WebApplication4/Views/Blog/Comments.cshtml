@model WebApplication4.Models.Comment
@{
    ViewBag.Title = "Comments";
}

<body class="bgcolor">
    <div class="bodytext boxshadow">
        <div class="headtext">
            <h1>Create Comment</h1>
        </div>
    </div>
    <br />
    @Html.Raw(ViewBag.PTitle)
    <form action="@Url.Action("Comments", "Blog", new { id = ViewBag.PID, returnUrl = ViewBag.ReturnUrl1 })" method="post">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-xs-1">
                Body:
            </div>
            <div class="col-xs-11">
                @Html.EditorFor(model => model.Body, new { htmlAttributes = new { @class = "form-control", rows = "5", id = "editor" } })
            </div>
        </div>
        <button type="submit" class="btn btn-default btn-sm boxshadow"><span class="network-name shadow">Add Comment</span></button>
        <a href="@Url.Action("Index")" class="btn btn-default btn-sm boxshadow"><span class="network-name shadow">Return</span></a>
    </form>
</body>

