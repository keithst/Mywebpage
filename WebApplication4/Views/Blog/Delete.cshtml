
@{
    ViewBag.Title = "Delete";
}

<body class="bgcolor">
    <div class="bodytext boxshadow">
        <div class="headtext">
            <h1>Delete Post</h1>
        </div>
    </div>
    <br />
    Please confirm deletion.
    <form action="@Url.Action("Delete", "Blog")" method="post">
        <button type="submit" class="btn btn-default btn-sm boxshadow"><span class="network-name shadow">Delete</span></button>
        <a href="@Url.Action("Index")" class="btn btn-default btn-sm boxshadow"><span class="network-name shadow">Return</span></a>
    </form>
</body>