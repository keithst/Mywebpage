@model WebApplication4.Models.BlogPost
@{
    ViewBag.Title = "Details";
}

<body class="bgcolor">
    <div class="bodytext boxshadow">
        <div class="headtext">
            <h1>@Model.Title</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-2">
            @if (User.IsInRole("Admin"))
            {
                <a href="@Url.Action("Create")" class="btn btn-default btn-sm boxshadow"><span class="network-name shadow">Create Post</span></a>
            }
        </div>
        <div class="col-xs-4">

        </div>
        <div class="col-xs-6" align="right">
            <div class="row">
                <div class="col-xs-4"></div>
                <div class="col-xs-3">
                    <a href="@Url.Action("Register", "Account")" class="btn btn-default btn-sm boxshadow"><span class="network-name shadow">Register</span></a>
                </div>
                <div class="col-xs-2">
                    <a href="@Url.Action("LogIn", "Account")" class="btn btn-default btn-sm boxshadow"><span class="network-name shadow">Log In</span></a>
                </div>
                <div class="col-xs-3">
                    @if (System.Web.HttpContext.Current.User.Identity.IsAuthenticated)
                    {
                        <form action="@Url.Action("LogOff", "Account")" method="post" class="formalign">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-default btn-sm boxshadow"><span class="network-name shadow">Log Out</span></button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div><br />
    <div class="row">
        <div class="col-xs-8 centertext">
            @if (Model.MediaURL != null)
            {
                <div class="row">
                    <div class="col-xs-12">
                        <img class="img-responsive centerimg" src="@Model.MediaURL" alt="" />
                    </div>
                </div>
            }
            <div class="row">
                <div class="col-xs-12 shadow">
                    <h3>@Model.Title</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    @Html.Raw(Model.Body)
                </div>
            </div>
        </div>
        <div class="col-xs-4">

        </div>
    </div>
@if (User.IsInRole("Admin"))
{
    <a href="@Url.Action("Comments", new { id = Model.Id })" class="btn btn-default btn-sm boxshadow"><span class="network-name shadow">Comment</span></a>
}
    <a href="@Url.Action("Index")" class="btn btn-default btn-sm boxshadow"><span class="network-name shadow">Return</span></a>
</body>
