@model WebApplication4.Models.BlogPost
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Details";
}

<body class="bgcolor">
    <div class="bodytext boxshadow">
        <div class="headtext">
            <h1>@Model.Title</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-2">
        </div>
        <div class="col-xs-4">

        </div>
        <div class="col-xs-6" align="right">
            <div class="row">
                <div class="col-xs-4"></div>
                <div class="col-xs-8">
                    <ul class="list-inline">
                        <li>
                            <a href="@Url.Action("Register", "Account")" class="btn btn-default btn-sm boxshadow"><span class="network-name shadow">Register</span></a>
                        </li>
                        <li>
                            <a href="@Url.Action("LogIn", "Account")" class="btn btn-default btn-sm boxshadow"><span class="network-name shadow">Log In</span></a>
                        </li>
                        @if (System.Web.HttpContext.Current.User.Identity.IsAuthenticated)
                        {
                            <li>
                                <form action="@Url.Action("LogOff", "Account", new { a = false })" method="post" class="formalign">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-default btn-sm boxshadow"><span class="network-name shadow">Log Out</span></button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div><br />
        <div class="row">
            <div class="col-xs-8">
                <h1>@Model.Title</h1>
                <hr class="hrcolor">
                <p><span class="glyphicon glyphicon-time"></span>Posted: @Model.Created</p>
                @if (Model.Updated != null)
                {
                    <p><span class="glyphicon glyphicon-time"></span>Updated: @Model.Updated</p>
                }
                @if (Model.MediaURL != null)
                {
                    <hr class="hrcolor">
                    <img class="img-responsive" src="@Model.MediaURL" alt="">
                }
                <hr class="hrcolor">
                @Html.Raw(Model.Body)
                <hr class="hrcolor">
                @foreach (var comment in Model.Comments)
                {
                    var author = comment.Author;
                    <p>
                     @author.DisplayName<br />
                     <span class="glyphicon glyphicon-time"></span>Posted: @comment.Created
                     @if (comment.Updated != null)
                     {
                        @:<span class="glyphicon glyphicon-time"></span>Updated: @comment.Updated
                     }
                    </p>
                    <p id="B @comment.Id">@comment.Body</p>
                    if (User.Identity.GetUserId() == comment.AuthorId)
                    {
                     @:<textarea id="T @comment.Id" hidden>@comment.Body</textarea><br />
                     @:<button id="@comment.Id" onclick="EditComment(this.id)" class="btn btn-default btn-sm boxshadow"><span class="network-name shadow">Edit</span></button>   
                    }
                     if (comment.Updated == null)
                     {
                        @:<ul class="list-inline">
                        @:<li>
                        @:<p id="U @comment.Id" hidden>Update: @comment.UpdateReason</p>
                        @:</li>
                        if (User.Identity.GetUserId() == comment.AuthorId)
                        {
                        @:<li>
                        @:<div id="UE @comment.Id" hidden>
                        @:Update: <input type="text" value="@comment.UpdateReason" />
                        @:</div>
                        @:</li>
                        }
                        @:</ul>
                     }
                     else
                     {
                        @:<ul class="list-inline">
                        @:<li>
                        @:<p id="U @comment.Id">Update: @comment.UpdateReason</p>
                        @:</li>
                        if (User.Identity.GetUserId() == comment.AuthorId)
                        {
                        @:<li>
                        @:<div id="UE @comment.Id" hidden>
                        @:Update: <input type="text" value="@comment.UpdateReason" />
                        @:</div>
                        @:</li>
                        }
                        @:</ul>
                     }
                }
                <div class="well">
                    <h4>Leave a Comment:</h4>
                    <form role="form" action="@Url.Action("SComment", "Blog")" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="PostId" value="@Model.Id" />
                        <div class="form-group">
                            <textarea class="form-control" rows="3" name="Body"></textarea>
                        </div>
                        <button type="submit" class="btn btn-default btn-sm boxshadow"><span class="network-name shadow">Submit</span></button>
                    </form>
                </div>
                <hr>
            </div>
        </div>
            <a href="@Url.Action("Index")" class="btn btn-default btn-sm boxshadow"><span class="network-name shadow">Return</span></a>
</body>

<script src="~/Scripts/Comment.js"></script>
@section Scripts {
    <script>
        $(document).ready(function () {
            $("#editor").tinymce({});
        });
    </script>
}