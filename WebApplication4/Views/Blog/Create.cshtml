@model WebApplication4.Models.BlogPost
@{
    ViewBag.Title = "Create";
}

<body class="bgcolor">
    <div class="bodytext boxshadow">
        <div class="headtext">
            <h1>Create Post</h1>
        </div>
    </div>
    <br />
    <form action="@Url.Action("Create", "Blog")" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-xs-1">
                Title:
            </div>
            <div class="col-xs-11">
                <input type="text" name="Title" />
            </div>
        </div><br />
        <div class="row">
            <div class="col-xs-1">
                Body: 
            </div>
            <div class="col-xs-11">
                @Html.EditorFor(model => model.Body, new { htmlAttributes = new { @class = "form-control", rows="5", id = "editor"} })
            </div>
        </div><br />
        <div class="row">
            <div class="col-xs-1">
                 Tags:
            </div>
            <div class="col-xs-11">
                <input type="text" name="Tags" />
            </div>
        </div>
        <div class="row">
            <div class="col-xs-1">
                Image: 
            </div>
            <div class="col-xs-11">
                <input name="image" type="file" class="form-control" id="fileUpload" />
            </div>
        </div>
        <div class="row">
            <div class="col-xs-1">
                Publish:
            </div>
            <div class="col-xs-11">
                @Html.EditorFor(model => model.Published)
            </div>
        </div>
        <br />
        <button type="submit" class="btn btn-default btn-sm boxshadow"><span class="network-name shadow">Create</span></button>
        <a href="@Url.Action("Index")" class="btn btn-default btn-sm boxshadow"><span class="network-name shadow">Return</span></a>
    </form>
</body>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#editor").tinymce({});
        });
    </script>
}