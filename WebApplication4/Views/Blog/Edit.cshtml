@model WebApplication4.Models.BlogPost
@{
    ViewBag.Title = "Edit";
}

<body class="bgcolor">
    <div class="bodytext boxshadow">
        <div class="headtext">
            <h1>Edit</h1>
        </div>
    </div>
    <br />
    <form action="@Url.Action("Edit", "Blog")" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div class="row">
                <input hidden type="text" name="Title" value="@Model.Title" />
        </div>
        <div class="row">
            <div class="col-xs-1">
                Body:
            </div>
            <div class="col-xs-11">
                @Html.EditorFor(model => model.Body, new { htmlAttributes = new { @class = "form-control", rows = "5", id = "editor" } })
            </div>
        </div>
        <div class="row">
            <div class="col-xs-1">
                Image:
            </div>
            <div class="col-xs-11">
                <input name="image" type="file" class="form-control" id="fileUpload" />
            </div>
        </div>
        <div class="row">
            <div class="col-xs-1">
                Publish:
            </div>
            <div class="col-xs-11">
                @Html.EditorFor(model => model.Published)
            </div>
        </div>
        <button type="submit" class="btn btn-default btn-sm boxshadow"><span class="network-name shadow">Apply Changes</span></button>
        <a href="@Url.Action("Index")" class="btn btn-default btn-sm boxshadow"><span class="network-name shadow">Return</span></a>
    </form>
</body>
@section Scripts {
    <script>
        $(document).ready(function () {
            $("#editor").tinymce({});
        });
    </script>
}