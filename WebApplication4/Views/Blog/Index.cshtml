@model IEnumerable<WebApplication4.Models.BlogPost>
@{
    ViewBag.Title = "Index";
    var tagClose = true;
}

<body class="bgcolor">
    <div class="bodytext boxshadow">
        <div class="headtext">
            <h1>Blog Page</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-2">
            @if (User.IsInRole("Admin"))
            {
                <a href="@Url.Action("Create")" class="btn btn-default btn-sm boxshadow"><span class="network-name shadow">Create Post</span></a>
            }
        </div>
        <div class="col-xs-4">
            
        </div>
        <div class="col-xs-6" align="right">
            <div class="row">
                <div class="col-xs-4"></div>
                <div class="col-xs-3">
                    <a href="@Url.Action("Register", "Account")" class="btn btn-default btn-sm boxshadow"><span class="network-name shadow">Register</span></a>
                </div>
                <div class="col-xs-2">
                    <a href="@Url.Action("LogIn", "Account")" class="btn btn-default btn-sm boxshadow"><span class="network-name shadow">Log In</span></a>
                </div>
                <div class="col-xs-3">
                    @if (System.Web.HttpContext.Current.User.Identity.IsAuthenticated)
                    {
                    <form action="@Url.Action("LogOff", "Account")" method="post" class="formalign">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-default btn-sm boxshadow"><span class="network-name shadow">Log Out</span></button>
                    </form>
                    }
                </div>
            </div>
        </div>
    </div><br />
        @foreach (var item in Model)
        {
            var counter = 1;
            if (tagClose)
            {
                @:<div class="row">
                tagClose = false;
            }
            if (item.Published == true || User.IsInRole("Admin"))
            {
                <div class="col-xs-6">
                    @if (item.MediaURL != null)
                    {
                        <div class="row">
                            <div class="col-xs-12">
                                <img class="img-responsive centerimg" src="@item.MediaURL" alt="" />
                            </div>
                        </div>
                    }
                    <div class="row">
                        <div class="col-xs-12 centertext">
                            <a href="@Url.Action("Details", new { id = item.Id, Slug = item.Slug })"><h3>@Html.DisplayFor(modelitem => item.Title)</h3></a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            Created: @Html.DisplayFor(modelitem => item.Created)
                        </div>
                        <div class="col-xs-6">
                            Updated: @Html.DisplayFor(modelitem => item.Updated)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 bettertext">
                            @Html.Raw(item.Body)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            @if (User.IsInRole("Admin"))
                            {
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                                @Html.Raw("|")
                            }

                            @Html.ActionLink("Details", "Details", new { id = item.Id, Slug = item.Slug })

                            @if (User.IsInRole("Admin"))
                            {
                                @Html.Raw("|")
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            }
                        </div>
                    </div>
                </div>
            }
            else { continue; }
            if (counter % 2 == 0)
            {
                @:</div>
                tagClose = true;
            }
            counter++;
            }
            @if (tagClose == false)
            {
                @:</div>
            }
</body>