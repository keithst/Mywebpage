@model IEnumerable<WebApplication4.Models.BlogPost>
@{
    ViewBag.Title = "Index";
}

<body class="bgcolor">
    <div class="bodytext boxshadow">
        <div class="headtext">
            <h1>Blog Page</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-2">
            @if (User.IsInRole("Admin"))
            {
                <a href="@Url.Action("Create")" class="btn btn-default btn-sm boxshadow"><span class="network-name shadow">Create Post</span></a>
            }
        </div>
        <div class="col-xs-7">

        </div>
        <div class="col-xs-1">
            <a href="@Url.Action("LogIn", "Account")" class="btn btn-default btn-sm boxshadow"><span class="network-name shadow">Log In</span></a>
        </div>
        <div class="col-xs-2">
            <form action="@Url.Action("LogOff", "Account")" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-default btn-sm boxshadow"><span class="network-name shadow">Log Out</span></button>
            </form>
        </div>
    </div>
    <table class="table">
        <thread>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th class="centertext">
                    @Html.DisplayNameFor(model => model.Created)
                </th>
                <th class="centertext">
                    @Html.DisplayNameFor(model => model.Updated)
                </th>
                <th>
                    Image
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thread>
        <thread>
            @foreach (var item in Model)
            {
                if (item.Published == true || User.IsInRole("Admin"))
                {
                <tr>
                    <td>
                       <a href="@Url.Action("Details", new { id = item.Id, Slug = item.Slug })"><span>@Html.DisplayFor(modelitem => item.Title)</span></a>
                    </td>
                    <td class="centertext">
                        @Html.DisplayFor(modelitem => item.Created)
                    </td>
                    <td class="centertext">
                        @Html.DisplayFor(modelitem => item.Updated)
                    </td>
                    <td>
                        @if (item.MediaURL != null)
                        {
                            <img class="img-responsive" src="@item.MediaURL" alt="" />
                        }
                    </td>
                    <td>
                        @if (User.IsInRole("Admin"))
                        {
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                            @Html.Raw("|")
                        }
                        
                        @Html.ActionLink("Details", "Details", new { id = item.Id, Slug = item.Slug })
                        
                        @if (User.IsInRole("Admin"))
                        {
                            @Html.Raw("|")
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        }
                    </td>
                </tr>
                }
            }
        </thread>
    </table>
</body>

