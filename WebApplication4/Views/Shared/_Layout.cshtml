<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Keith Sturzenbecker's Landing Page</title>
    <link href="~/Content/SyntaxHighlighter/shThemeDefault.css" rel="stylesheet">
    <link href="~/Content/SyntaxHighlighter/shCore.css" rel="stylesheet">
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <link href="~/Content/landing-page.css" rel="stylesheet">
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">
</head>
<body>
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container topnav">
                <div class="row">
                    <div class="col-xs-4 margin-t-l">
                        @if (System.Web.HttpContext.Current.User.Identity.IsAuthenticated)
                        {
                            @:Logged in as: @User.Identity.Name
                        }
                    </div>
                    <div class="col-xs-8">
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                @Html.ActionLink("Home", "Index", "Home")
                            </li>
                            <li>
                                @Html.ActionLink("About Me", "About", "Home")
                            </li>
                            <li>
                                @Html.ActionLink("Projects", "Projects", "Projects")
                            </li>
                            <li>
                                @Html.ActionLink("Blog", "Index", "Blog")
                            </li>
                            <li>
                                @Html.ActionLink("Photo Gallery", "PhotoGallery", "Home")
                            </li>
                            <li>
                                @Html.ActionLink("Contact", "Contact", "Home")
                            </li>
                        </ul>
                    </div>
                </div>
    </div>
        </nav>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/SyntaxHighlighter/shCore.js"></script>
    <script src="~/Scripts/SyntaxHighlighter/shBrushJScript.js"></script>
    <script src="~/Scripts/NumberCrunch.js"></script>
    <script src="~/Scripts/Palindrome.js"></script>
    <script src="~/Scripts/Factorial.js"></script>
    <script src="~/Scripts/FizzBuzz.js"></script>
    <script src="~/Scripts/tinymce/jquery.tinymce.min.js"></script>
    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>

